/* USER CODE BEGIN Header_StartDefaultTask */
/**
  * @brief  Function implementing the defaultTask thread.
  * @param  argument: Not used
  * @retval None
  */
/* USER CODE END Header_StartDefaultTask */
void StartDefaultTask(void *argument)
{
  /* USER CODE BEGIN StartDefaultTask */
  /* Infinite loop */
  for(;;)
  {
    osDelay(10000);
  }
  /* USER CODE END StartDefaultTask */
}

/* USER CODE BEGIN Header_StartTask_ReadBLE */
/**
* @brief Function implementing the Task_ReadBLE thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_StartTask_ReadBLE */
void StartTask_ReadBLE(void *argument)
{
  /* USER CODE BEGIN StartTask_ReadBLE */
    TickType_t lastWakeTime = xTaskGetTickCount();

    //BleController_TaskInit();

    for (;;)
    {

    	uint32_t s = DWT->CYCCNT;

        BleController_TaskStep();

        WCET_Update(WCET_TASK_BLE, DWT->CYCCNT - s);

	    free_words_ble = uxTaskGetStackHighWaterMark(NULL);

        lastWakeTime += 20;
        osDelayUntil(lastWakeTime);
    }
  /* USER CODE END StartTask_ReadBLE */
}

/* USER CODE BEGIN Header_StartTask_ReadIMU */
/**
* @brief Function implementing the Task_ReadIMU thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_StartTask_ReadIMU */
void StartTask_ReadIMU(void *argument)
{
  /* USER CODE BEGIN StartTask_ReadIMU */
    TickType_t lastWakeTime = xTaskGetTickCount();

    IMU_TaskInit();

    for (;;)
    {

    	uint32_t s = DWT->CYCCNT;

	    IMU_TaskStep();

	    WCET_Update(WCET_TASK_IMU, DWT->CYCCNT - s);


	    free_words_imu = uxTaskGetStackHighWaterMark(NULL);

        lastWakeTime += 20;
        osDelayUntil(lastWakeTime);
    }
  /* USER CODE END StartTask_ReadIMU */
}

/* USER CODE BEGIN Header_StartTask_ReadSonars */
/**
* @brief Function implementing the Task_ReadSonars thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_StartTask_ReadSonars */
void StartTask_ReadSonars(void *argument)
{
  /* USER CODE BEGIN StartTask_ReadSonars */
    TickType_t lastWakeTime = xTaskGetTickCount();
    Sonar_TaskInit();
    //Sonar_TaskInit();

    for (;;)
    {

        Sonar_TaskStep();

	    free_words_sonar = uxTaskGetStackHighWaterMark(NULL);

        lastWakeTime += 100;
        osDelayUntil(lastWakeTime);
    }
  /* USER CODE END StartTask_ReadSonars */
}

/* USER CODE BEGIN Header_StartTask_Rx */
/**
* @brief Function implementing the Task_Rx thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_StartTask_Rx */
void StartTask_Rx(void *argument)
{
  /* USER CODE BEGIN StartTask_Rx */
	Rx_TaskInit();

  /* Infinite loop */
  for(;;)
  {
  	uint32_t s = DWT->CYCCNT;

  	Rx_TaskStep();

  	WCET_Update(WCET_TASK_RX, DWT->CYCCNT - s);

  }
  /* USER CODE END StartTask_Rx */
}

/* USER CODE BEGIN Header_StartTask_Tx */
/**
* @brief Function implementing the Task_Tx thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_StartTask_Tx */
void StartTask_Tx(void *argument)
{
  /* USER CODE BEGIN StartTask_Tx */
    TickType_t lastWakeTime = xTaskGetTickCount();


    for (;;)
    {

    	uint32_t s = DWT->CYCCNT;

        Tx_TaskStep();

        WCET_Update(WCET_TASK_TX, DWT->CYCCNT - s);
	    free_words_tx = uxTaskGetStackHighWaterMark(NULL);

        lastWakeTime += 20;
        osDelayUntil(lastWakeTime);
    }
  /* USER CODE END StartTask_Tx */
}

/* USER CODE BEGIN Header_StartTask_Supervisor */
/**
* @brief Function implementing the Task_Supervisor thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_StartTask_Supervisor */
void StartTask_Supervisor(void *argument)
{
  /* USER CODE BEGIN StartTask_Supervisor */
	Supervisor_TaskInit();
	TickType_t lastWakeTime = osKernelGetTickCount();

  /* Infinite loop */
  for(;;)
  {
	  uint32_t s = DWT->CYCCNT;

	  Supervisor_TaskStep();
	  WCET_Update(WCET_TASK_SUPERVISOR, DWT->CYCCNT - s);
	  WCET_Print();
	  lastWakeTime += 20;
	  osDelayUntil(lastWakeTime);
  }
  /* USER CODE END StartTask_Supervisor */
}

/* USER CODE BEGIN Header_StartTask_Log */
/**
* @brief Function implementing the Task_Log thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_StartTask_Log */
void StartTask_Log(void *argument)
{
  /* USER CODE BEGIN StartTask_Log */
  /* Infinite loop */
    TickType_t lastWakeTime = xTaskGetTickCount();


    for (;;)
    {
    	Log_TaskStep();
        lastWakeTime += 1000;
        osDelayUntil(lastWakeTime);
    }
  /* USER CODE END StartTask_Log */
}

