#include "snapshot/supervisor_snapshot.h"
#include "cmsis_os2.h"
#include "cmsis_os.h"

#define MUTEX_TIMEOUT 1
typedef StaticSemaphore_t osStaticMutexDef_t;

/* Snapshot storage */
static SupervisorSnapshot_t snapshot;

/* Mutex */
osStaticMutexDef_t sup_snap_mutex_cb;

static const osMutexAttr_t snapshot_mutex_attr = {
    .name = "SupervisorSnapshotMutex",
    .cb_mem = &sup_snap_mutex_cb,
    .cb_size = sizeof(sup_snap_mutex_cb),
	.attr_bits = osMutexPrioInherit | osMutexRobust
};

static osMutexId_t snapshot_mutex;


void SupervisorSnapshot_MutexInit(void)
{
	if (snapshot_mutex == NULL){
		snapshot_mutex = osMutexNew(&snapshot_mutex_attr);
        memset(&snapshot, 0, sizeof(snapshot));   // <-- FONDAMENTALE
	}
}

/* ===== Writer API ===== */
void SupervisorSnapshot_Write(const SupervisorSnapshot_t *src)
{
    if (src == NULL)
        return;


    if( osMutexAcquire(snapshot_mutex, MUTEX_TIMEOUT) == osOK){
    	snapshot = *src;    /* struct copy */
    	osMutexRelease(snapshot_mutex);
    }
}

/* ===== Reader API ===== */
void SupervisorSnapshot_Read(SupervisorSnapshot_t *dst)
{
    if (dst == NULL)
        return;


    if (osMutexAcquire(snapshot_mutex, MUTEX_TIMEOUT) == osOK){
    	*dst = snapshot;    /* struct copy */
    	osMutexRelease(snapshot_mutex);
    }
}
